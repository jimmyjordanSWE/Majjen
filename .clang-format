BasedOnStyle: LLVM

# ---- Indentation -------------------------------------------------------
IndentWidth: 4
TabWidth: 4
UseTab: Never

# ---- Braces ------------------------------------------------------------
BreakBeforeBraces: Attach           # { on the same line as the declaration
AllowShortFunctionsOnASingleLine: None    # no single‑line functions
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortBlocksOnASingleLine: false

# ---- Pointer alignment --------------------------------------------------
PointerAlignment: Left              # int *ptr
DerivePointerAlignment: false

# ---- Function parameters & line wrapping --------------------------------
BinPackParameters: true
AllowAllParametersOfDeclarationOnNextLine: false
ColumnLimit: 160                    # wide lines allowed (no hard wrap)

# ---- Spaces -----------------------------------------------------------------
SpacesBeforeTrailingComments: 1
SpaceBeforeParens: ControlStatements

# ---- Multi‑line blocks -----------------------------------------------------
BreakBeforeBinaryOperators: None     # keep expressions readable
AllowAllArgumentsOnNextLine: false
AllowAllConstructorInitializersOnNextLine: false
